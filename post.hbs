{{!< default}}
{{#post}}
    <article class="post">
        
        <header class="post-header">
            <h1>{{title}}</h1>
            
            <!-- Post meta -->
            {{> post-meta}}
        </header>

        <div class="post-content">
            {{content}}
        </div>

    </article>

    <!-- Facebook Like -->
    <iframe src="//www.facebook.com/plugins/like.php?href={{@blog.url}}{{url}}&amp;width&amp;layout=standard&amp;action=like&amp;show_faces=true&amp;share=true&amp;height=80&amp;appId=" scrolling="no" frameborder="0" style="border:none; overflow:hidden; height:80px;" allowTransparency="true"></iframe>

    <!-- Google+ Comments -->
    <section class="comments">
    <div id="post_{{id}}_comments"></div><script>(function () {var c = document.getElementById('post_{{id}}_comments'),w = c.offsetWidth; c.innerHTML = '<div class="g-comments" data-href="{{@blog.url}}{{url}}" data-width="' + w + '" data-first_party_property="BLOGGER" data-view_type="FILTERED_POSTMOD"></div>';})();</script>
    </section>
{{/post}}
